{
	"definitions": {
		"color_pcb":			"#0b3b0b",
		"color_soldermask":		"#0cb50c",
		"color_silkprint":		"#f6f5f6",
		"color_pad":			"#dcaa14",
		"color_drill":			"#444244"
	},
	"steps": {
		"top_copper": { 
			"text": "Top Copper (traces under soldermask)",
			"action": "render-gerber",
			"file_regex": ".*\\.gtl",
			"file_regex_opts": [ "ignore_case" ],
			"color": "$color_soldermask"
		},
		"top_soldermask": {
			"text": "Top Soldermask (Pads)",
			"action": "render-gerber",
			"file_regex": ".*\\.gts",
			"file_regex_opts": [ "ignore_case" ],
			"color": "$color_pad"
		},
		"top_silkprint": {
			"text": "Top Silkprint",
			"action": "render-gerber",
			"file_regex": ".*\\.gto",
			"file_regex_opts": [ "ignore_case" ],
			"color": "$color_silkprint"
		},
		"drill": {
			"text": "Drill holes",
			"action": "render-drill",
			"file_regex": ".*\\.txt",
			"file_regex_opts": [ "ignore_case" ],
			"color": "$color_drill"
		},
		"top": {
			"action": "compose",
			"background": "$color_pcb",
			"sources": [
				{ "name": "top_copper" },
				{ "name": "top_soldermask" },
				{ "name": "top_silkprint" },
				{ "name": "drill" }
			],
			"deliverable": true
		}
	}
}
